DOCKERFILE=Dockerfile
SERVICE_NAME=sai-auth
SERVICE_VERSION=1.0.0

SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_EXTERNAL_PORT=8082
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120

LOG_LEVEL=info
LOG_FORMAT=console
LOG_OUTPUT=stdout

MIDDLEWARES_ENABLED=true
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS='["*"]'
CORS_MAX_AGE=86400
AUTH_ENABLED=true
AUTH_PROVIDER=basic
AUTH_SERVICE_URL=http://localhost:8080
BASIC_USER=user
BASIC_PASS=pass

REQUEST_LOGGING_ENABLED=true
REQUEST_LOG_LEVEL=debug
REQUEST_LOG_HEADERS=true
REQUEST_LOG_BODY=true

RECOVERY_ENABLED=true
RECOVERY_STACK_TRACE=true
RATELIMIT_ENABLED=true

HEALTH_ENABLED=true
DOCS_ENABLED=true

CLIENTS_ENABLED=true
STORAGE_URL=http://sai-storage:8090
STORAGE_AUTH_PROVIDER=basic
STORAGE_USERNAME=name
STORAGE_PASSWORD=pass

ACCESS_TOKEN_TTL=3600s
REFRESH_TOKEN_TTL=86400s
BCRYPT_COST=12
SECRET_KEY=your-secret-key-change-in-production

SUPER_USER_IP_1=127.0.0.1
SUPER_USER_IP_2=::1